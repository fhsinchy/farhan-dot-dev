---
import { ArrowRight, Github, Linkedin, Twitter } from 'lucide-astro';

const githubUrl = import.meta.env.PUBLIC_GITHUB_URL || 'https://github.com';
const linkedinUrl = import.meta.env.PUBLIC_LINKEDIN_URL || 'https://linkedin.com';
const twitterHandle = import.meta.env.PUBLIC_TWITTER_HANDLE || '@fhsinchy';
const twitterUrl = `https://twitter.com/${twitterHandle.replace('@', '')}`;
---

<main id="main-content">
<section id="hero" class="min-h-screen flex items-center justify-center px-6 pt-20">
  <div class="max-w-4xl mx-auto text-center">
    <div class="mb-6">
      <span class="inline-block px-4 py-1.5 rounded-full bg-muted text-muted-foreground border border-border mb-6">
        Backend + AI Engineer
      </span>
    </div>
    
    <h1 class="mb-6 text-foreground">
      Farhan Hasin Chowdhury
    </h1>
    
    <p class="mb-8 max-w-2xl mx-auto text-xl text-muted-foreground">
      Building robust backend systems and AI solutions. Technical writer for freeCodeCamp, MongoDB, and Honeybadger. 
      Sharing practical insights from production systems.
    </p>

    <div class="flex flex-wrap items-center justify-center gap-4 mb-12">
      <a
        href="/nuggets"
        class="inline-flex items-center justify-center gap-2 px-6 py-3 rounded-md bg-primary text-primary-foreground hover:bg-accent hover:text-white transition-colors font-medium"
      >
        Read Engineering Nuggets
        <ArrowRight size={18} />
      </a>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-2 px-6 py-3 rounded-md bg-transparent border border-border hover:bg-primary hover:text-white hover:border-primary text-foreground transition-all font-medium"
      >
        Get in Touch
      </a>
    </div>

    <div class="flex items-center justify-center gap-6">
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-muted-foreground hover:text-primary transition-colors"
        aria-label="GitHub"
      >
        <Github size={24} />
      </a>
      <a
        href={linkedinUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-muted-foreground hover:text-primary transition-colors"
        aria-label="LinkedIn"
      >
        <Linkedin size={24} />
      </a>
      <a
        href={twitterUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-muted-foreground hover:text-primary transition-colors"
        aria-label="Twitter"
      >
        <Twitter size={24} />
      </a>
    </div>
  </div>
</section>
</main>
