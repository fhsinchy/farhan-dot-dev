# Giscus configuration (Public runtime)
# Copy to .env and fill values from https://giscus.app after installing the GitHub app

# Required
PUBLIC_GISCUS_REPO=owner/repo
PUBLIC_GISCUS_REPO_ID=your_repo_id
PUBLIC_GISCUS_CATEGORY=General
PUBLIC_GISCUS_CATEGORY_ID=your_category_id

# Optional
PUBLIC_GISCUS_THEME=transparent_dark
PUBLIC_GISCUS_MAPPING=pathname
PUBLIC_GISCUS_LANG=en
PUBLIC_GISCUS_REACTIONS=1
PUBLIC_GISCUS_EMIT_METADATA=0
PUBLIC_GISCUS_INPUT_POSITION=bottom
